<div id='signin'>
  <h3>Login</h3>
  <%= form_tag(signin_path, method: "post") do %>
    <%= label_tag(:username, "Username") %>
    <%= text_field_tag(:username) %>
    <%= label_tag(:password, "Password") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Login") %>
  <% end %>
  <% if @error %>
    <p class="error"><%= @error %></p>
  <% end %>
</div>